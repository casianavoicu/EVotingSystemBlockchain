<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Voting System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Electronic Voting</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Acasă</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Vote" asp-action="Vote">Votează</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Home" asp-action="Index">Rezultate voturi</a>
                </li>
                <li class="nav-item dropdown text-dark">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Setări
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-area="" asp-controller="Election" asp-action="Index">Adaugă o nouă alegere</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Candidate" asp-action="Index">Adaugă candidat</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Party" asp-action="Index">Adaugă partid</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Rezultate Blockchain
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-area="" asp-controller="Blockchain" asp-action="Index">Tranzacții</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Blockhain" asp-action="Index">Blocuri</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0 rightSide">
                <a class="btn btn-outline-secondary btn-sm" asp-area="" asp-controller="Home" asp-action="LogIn" role="button">Autentificare</a>
                <a class="btn btn-primary  btn-sm" asp-area="" asp-controller="Register" asp-action="Index" role="button">Înregistrare</a>
            </form>
        </div>
    </nav>
    <main class="main">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - E-Voting - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>